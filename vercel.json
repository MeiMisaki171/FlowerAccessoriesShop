{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 10,
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/api" }],
  "buildCommand": "npm install && prisma generate && npm run build"
}
